{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "allowJs": true,
        "baseUrl": ".",
        "types": [
            "webpack-env"
        ],
        "paths": {
            "@/*": [
                "resources/js/*"
            ],
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
      "resources/js/**/*.ts",
      "resources/js/**/*.tsx",
      "resources/js/**/*.vue",
      "node_modules/@types/jquery/misc.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
